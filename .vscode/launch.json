{
    "version": "0.2.0",
    "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "Mocha Current File",
          "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
          "args": [
            "${relativeFile}"
          ],
          "runtimeArgs": [
            "--nolazy", "-r", "ts-node/register"
          ]
      },
      {
          "type": "node",
          "request": "launch",
          "name": "Mocha All",
          "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
          "args": [
              "${workspaceFolder}/tests/**/*.ts"
            ],
            "runtimeArgs": [
                "--nolazy", "-r", "ts-node/register"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "debug",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/www",
            "args": ["--inspect"],
            "protocol": "inspector"
          }
    ]
  }